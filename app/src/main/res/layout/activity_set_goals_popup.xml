<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="300dp"
    android:minHeight="400dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E6ECFE"
    tools:context=".SetGoalsPopup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мои цели"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Шаги:"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_stepsGoal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="12000"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:gravity="start"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:maxLines="1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Калории:"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_caloriesGoal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="2000"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:gravity="start"
                android:inputType="numberDecimal"
                android:maxLength="4"
                android:maxLines="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Часы сна:"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_hoursGoal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="8"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:gravity="start"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:maxLines="1"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_saveGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:text="Сохранить"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>