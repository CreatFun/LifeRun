<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarActivity">

    <ImageButton
        android:id="@+id/main_icon"
        android:layout_width="137sp"
        android:layout_height="60sp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/main_icon"
        android:onClick="startMainActivity"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/main_icon" />

    <ImageButton
        android:id="@+id/list_icon"
        android:layout_width="137sp"
        android:layout_height="60sp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/list_icon"
        android:onClick="startListActivity"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_icon"
        app:srcCompat="@drawable/list_icon" />

    <ImageButton
        android:id="@+id/calendar_icon"
        android:layout_width="137sp"
        android:layout_height="60sp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/calendar_icon"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_icon"
        app:srcCompat="@drawable/calendar_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="CALENDAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>