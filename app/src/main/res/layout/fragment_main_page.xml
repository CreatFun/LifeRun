<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6ECFE"
    tools:context=".MainActivity">

    <!--  Settings icon (button)  -->
    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:onClick="startSettingsActivity"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:contentDescription="@string/settings_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_icon" />

    <!--  Avatar icon  -->


    <!--  Name, date  -->
    <ImageView
        android:id="@+id/avatar_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar_icon" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:text="Имя"
            android:textAlignment="center"
            android:textColor="#343434"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:text="XXXX"
                android:textAlignment="center"
                android:textColor="#343434"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:text="XX.XX"
                android:textAlignment="center"
                android:textColor="#343434"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />
        </LinearLayout>
    </LinearLayout>

    <!--  Battery status  -->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="270dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/battery_icon"
            tools:layout_editor_absoluteX="287dp" />

        <TextView
            android:id="@+id/tv_batteryCharge"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingStart="1dp"
            android:paddingEnd="10dp"
            android:text="0%"
            android:textColor="#343434"
            android:textSize="18sp" />
    </LinearLayout>

    <!--  Steps, calories, hours of sleep  -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="123dp"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--   Steps     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stepsCount"
                android:layout_width="70dp"
                android:layout_height="41dp"
                android:text="XXXXX"
                android:textAlignment="textEnd"
                android:paddingTop="14dp"
                android:textColor="#343434"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_stepsGoal"
                android:layout_width="130dp"
                android:layout_height="41dp"
                android:text=" / XXXXX шагов"
                android:textAlignment="textStart"
                android:paddingTop="14dp"
                android:textColor="#343434"
                android:textSize="14sp"
                />

        </LinearLayout>

        <!--   Calories     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_caloriesCount"
                android:layout_width="70dp"
                android:layout_height="41dp"
                android:text="XXXXX"
                android:textAlignment="textEnd"
                android:paddingTop="14dp"
                android:textColor="#343434"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_caloriesGoal"
                android:layout_width="130dp"
                android:layout_height="41dp"
                android:text=" / XXXXX калорий"
                android:textAlignment="textStart"
                android:paddingTop="14dp"
                android:textColor="#343434"
                android:textSize="14sp"
                />

        </LinearLayout>

        <!--   Hours of sleep     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hoursCount"
                android:layout_width="70dp"
                android:layout_height="41dp"
                android:text="XX"
                android:textAlignment="textEnd"
                android:paddingTop="14dp"
                android:textColor="#343434"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_hoursGoal"
                android:layout_width="130dp"
                android:layout_height="41dp"
                android:text=" / XX часов сна"
                android:textAlignment="textStart"
                android:paddingTop="14dp"
                android:textColor="#343434"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>

    <!--  Sleep time  -->
    <FrameLayout
        android:id="@+id/sleepTimeInfo"
        android:layout_width="365dp"
        android:layout_height="145dp"
        android:layout_marginTop="225dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/info_bg"
        >
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!--      Heading      -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Время сна"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:paddingTop="5dp"
                android:textColor="#343434"
                android:textSize="18sp"/>

            <!--      Deep sleep      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="5dp"
                    android:text="Крепкий сон"
                    android:textColor="#343434"
                    android:textSize="15sp"/>
                
                <TextView
                    android:id="@+id/tv_deepSleepCount"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="5dp"
                    android:text="XX"
                    android:textColor="#343434"
                    android:textSize="15sp"/>


            </LinearLayout>

            <!--      Light sleep      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="5dp"
                    android:text="Быстрый сон"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/lightSleepCount"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="5dp"
                    android:text="XX"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

            </LinearLayout>

            <!--      Awake      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="5dp"
                    android:text="Пробуждение"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/awakeCount"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="5dp"
                    android:text="XX"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

    <!--  Activity info  -->
    <FrameLayout
        android:id="@+id/activityInfo"
        android:layout_width="365dp"
        android:layout_height="145dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTimeInfo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/info_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!--      Heading      -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Активность"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:paddingTop="5dp"
                android:textColor="#343434"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:orientation="horizontal">


                <!--      Steps          -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/tv_stepsCount"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="XXXX"
                        android:textColor="#343434"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:gravity="top"
                        android:text="Шаги"
                        android:textColor="#343434"
                        android:textSize="18sp"/>


                </LinearLayout>

                <!--       Distance         -->
                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_distanceCount"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="XXXX"
                        android:textColor="#343434"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:gravity="top"
                        android:text="Расстояние"
                        android:textColor="#343434"
                        android:textSize="18sp"/>

                </LinearLayout>


                <!--       Calories         -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/tv_caloriesCount"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="XXXX"
                        android:textColor="#343434"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:gravity="top"
                        android:text="Калории"
                        android:textColor="#343434"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


    <!--  Pulse info  -->
    <FrameLayout
        android:id="@+id/pulseInfo"
        android:layout_width="365dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityInfo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/info_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!--      Heading      -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Пульс"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:paddingTop="5dp"
                android:textColor="#343434"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/heart_icon"/>

                    <TextView
                        android:layout_width="290dp"
                        android:layout_height="65dp"
                        android:text="XX"
                        android:paddingStart="15dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="14dp"
                        android:textColor="#343434"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


